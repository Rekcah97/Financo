generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  name String
  password String
  email String @unique
  verified Boolean @default(false)
  createdAt DateTime @default(now())
  RefreshToken RefreshToken[]
  VerificationCode VerificationCode[]
  Category Category[]
  Transaction Transaction[]
  savingGoals savingGoals[]
}
model RefreshToken {
  id Int @id @default(autoincrement())
  token String @unique
  user User @relation(fields: [userId], references: [id])
  userId Int
  createdAt DateTime @default(now())
  expiresAt DateTime

}
model VerificationCode {
  id Int @id @default(autoincrement())
  code String
  createdAt DateTime @default(now())
  expiresAt DateTime 
  user User @relation(fields: [userId], references: [id])
  userId Int
}
enum Type{
  saving
  expense
  income
}

model Category{
  id Int @id @default(autoincrement())
  name String
  type Type
  user User @relation(fields: [userId], references: [id])
  userId Int
  color String
  Transaction Transaction[]
}
model Transaction{
  id Int @id @default(autoincrement())
  amount Int
  user User @relation(fields: [userId], references: [id])
  userId Int
  category Category @relation(fields: [catId],references: [id])
  catId Int
  note String
  createdAt DateTime @default(now())
  date DateTime
}

model savingGoals{
  id Int @id @default(autoincrement())
  name String
  user User @relation(fields: [userId],references: [id])
  userId Int
  targetAmount Int
  deadline DateTime
}